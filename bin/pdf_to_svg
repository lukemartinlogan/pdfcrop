#!/usr/bin/env python3

import sys
from pdfcrop.pdfcrop import PdfCrop

if len(sys.argv) == 2:
    infile = sys.argv[1]
    outfile = None
elif len(sys.argv) == 3:
    infile = sys.argv[1]
    outfile = sys.argv[2]
else:
    print("USAGE: pdfcrop.py [input.pdf] [output.pdf (opt)]")
    sys.exit(1)

pdf = PdfCrop(infile, outfile)
pdf.to_svg()
